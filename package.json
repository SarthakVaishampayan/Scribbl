{
  "name": "collaborative-canvas",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "postinstall": "npm install --prefix src && npm install --prefix server",
    "server": "nodemon server/server.js",
    "client": "npm run dev --prefix src",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.1.11"
  }
}
